<h2>Sign In</h2>
<p>New user? <%= link_to "Sign up now!", signup_path %></p>

<%= form_with(url: signin_path, scope: :session, data: { turbo: 'false' }) do |form| %>
  <% if @invalid %>
    <p style="color:red">Invalid username/password combination</p>
  <% end %>

  <%= form.label :username %>
  <%= form.text_field :username %> <br>

  <%= form.label :password %>
  <%= form.password_field :password %> <br>

  <%= form.submit "Sign in" %>
<% end %>